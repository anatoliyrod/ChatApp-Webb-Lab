<!-- Alertă cu rol secundar -->
<div class="alert alert-secondary mt-4" role="alert">
    <!-- Pictogramă pentru creion -->
    <span class="oi oi-pencil mr-2" aria-hidden="true"></span>
    <!-- Titlul alertei -->
    <strong>@Title</strong>

    <!-- Mesajul alertei -->
    <span class="text-nowrap">
        Please take our <!-- Vă rugăm să participați la -->
        <!-- Link către sondaj -->
        <a target="_blank" class="font-weight-bold" href="https://go.microsoft.com/fwlink/?linkid=2137813">brief survey</a>
    </span>
    <!-- și spuneți-ne ce credeți. -->
    and tell us what you think.
</div>

@code {
    // Demonstrare mod în care un component părinte poate furniza parametri
    [Parameter]
    public string Title { get; set; }
}
